<div class="modal fade" id="modalAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Recipe</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addRecipeForm" method="post" action="/Home/RecipeManagement">
                    <div class="mb-3">
                        <label for="recipeName" class="form-label">Food Name</label>
                        <input type="text" class="form-control" id="recipeName" name="Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="recipeCategory" class="form-label">Category</label>
                        <input type="text" class="form-control" id="recipeCategory" name="Category" required>
                    </div>
                    <hr class="my-3">
                    <h4>Ingredients</h4>
                    <div id="ingredientsList">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="Ingredients[]" placeholder="Ingredient" required>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary btn-sm mt-3" onclick="addIngredient()">Add Ingredient</button>
                    <hr class="my-3">
                    <h4>Cooking Steps</h4>
                    <div id="stepsList">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="CookingSteps[]" placeholder="Step" required>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary btn-sm mt-3" onclick="addStep()">Add Step</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" form="addRecipeForm" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>